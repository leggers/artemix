$ ->
    window.images = {}

    rcanvas = $("#right_cover")[0]
    width = rcanvas.width
    height = rcanvas.height

    rcontext = rcanvas.getContext('2d')
    r_img = new Image()

    r_img.onload = ->
        rcontext.drawImage(r_img, 0, 0, width, height)

    r_img.src = "<%= asset_path 'right_leg.png' %>"

    lcontext = $('#left_cover')[0].getContext('2d')
    l_img = new Image()

    l_img.onload = ->
        lcontext.drawImage(l_img, 0, 0, width, height)

    l_img.src = "<%= asset_path 'left_leg.png' %>"